<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

<header>
  <%- include('../partials/nav'); %>
</header>

<main>
<!--Exercise Pills-->
<section>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Chest</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Back</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Shoulders</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Biceps</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Triceps</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Abs</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off">Legs</button>
</section>
<!--List of Chosen Exercises-->

<!--Workout Form-->
<section>
    <form action="" method="post">
        <label for="reps">Reps</label>
        <input type="number" id="reps">
        <label for="sets">Sets</label>
        <input type="number" id="sets">
        <select id="exercises">
          <% for (const key in exercises) {%>

          <% }); %>
        </select>
        <button type="submit">Submit</button>
        <button type="button" onclick="addExercise()">Add</button>
    </form>
</section>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>